<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
 <link href="wwwroot/css/site.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
                      <!-- PUNTAJE ACTUAL: -->
    <div class="puntajeactual">
        <p>Puntaje Actual:</p>
        <p>@ViewBag.Puntaje</p>
    </div>
                      <!-- PUNTAJE ACTUAL: -->
                      <!-- PREGUNTA -->
    <div class="textopregunta">
        <div class="numeroPregunta">Pregunta: @ViewBag.Pregunta.IdPregunta</div>
        <div class="contenidoPregunta">@ViewBag.Pregunta.Enunciado</div>
    </div>
                      <!-- PREGUNTA -->
                      <!-- IMAGEN -->
    <img class="Preguntados-ort" src=@ViewBag.Pregunta.Foto alt="imagenpregunta">
                      <!-- IMAGEN -->
                      <!-- RESPUESTAS (foreach) -->
    @{
     int top1 = 70;
     foreach (var item in @ViewBag.Respuestas)
     {
      string top = (top1.ToString() + "%");
      <div class="boxpregunta" style="top: @top;">
        <div class="textoboxpregunta">
            <a href='@Url.Action("VerificarRespuesta", "Home", new{respuesta = @item.Correcta})' style="text-decoration: none; color: #ffffff;">@item.Contenido</a>
        </div>
      </div>
      top1+=15;
     }
    }
                      <!-- RESPUESTAS (foreach) -->
    </body>
  </html>